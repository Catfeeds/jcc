<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@drawable/top"
        android:gravity="center_vertical" >

        <include layout="@layout/commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_user_profile"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <LinearLayout 
            android:id="@+id/ll_attrib"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <RelativeLayout 
                android:id="@+id/game_head_left"
	        	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                               
	            <ImageView 
	                android:id="@+id/game_icon"
	                android:layout_width="60dip"
	                android:layout_height="60dip"
	                android:layout_alignParentTop="true"
	                android:src="@drawable/default_avatar"
	                android:layout_toRightOf="@+id/ll_nick"
	                android:scaleType="centerInside"
	                />
	            
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="内容简介"
                        />
                    
                    <TextView 
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="无"
                        />
                    
            </LinearLayout>
        </LinearLayout>
        
     <ScrollView
	      android:id="@+id/scrollView"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_below="@+id/ll_attrib"
	      android:layout_above="@+id/ll_bottom">
               
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_title"
        android:background="@android:color/white"
        android:orientation="vertical" >
                    
        <LinearLayout  
	        android:id="@+id/container"  
	        android:layout_width="match_parent"  
	        android:layout_height="320dp"  
	        android:clipChildren="false"  
	        android:gravity="center_horizontal"  
	        android:layerType="software"  
	        android:orientation="horizontal" >  
	  
	        <android.support.v4.view.ViewPager  
	            android:id="@+id/view_pager"  
	            android:layout_width="match_parent"  
	            android:layout_height="match_parent"  
	            android:layout_marginRight="100dp"  
	            android:clipChildren="false" >  
	        </android.support.v4.view.ViewPager>  
	        
	    </LinearLayout> 
        
        <LinearLayout 
            android:id="@+id/ll_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dip"
            >
            <TextView 
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentLeft="true"
				android:text="大小："
				android:textSize="16sp"
				android:gravity="center_vertical"
				android:textColor="#808080"
                android:background="#FFFFFF"
                />
            <TextView 
                android:id="@+id/size"
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentRight="true"
				android:paddingRight="20dip"
				android:textSize="16sp"
				android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView 
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentLeft="true"
				android:text="开发商："
				android:textSize="16sp"
				android:gravity="center_vertical"
				android:textColor="#808080"
                android:background="#FFFFFF"
                />
            <TextView 
                android:id="@+id/developer"
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentRight="true"
				android:paddingRight="20dip"
				android:textSize="16sp"
				android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView 
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentLeft="true"
				android:text="运营商："
				android:textSize="16sp"
				android:gravity="center_vertical"
				android:textColor="#808080"
                android:background="#FFFFFF"
                />
            <TextView 
                android:id="@+id/operator"
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentRight="true"
				android:paddingRight="20dip"
				android:textSize="16sp"
				android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView 
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentLeft="true"
				android:text="版本："
				android:textSize="16sp"
				android:gravity="center_vertical"
				android:textColor="#808080"
                android:background="#FFFFFF"
                />
            <TextView 
                android:id="@+id/version"
				android:layout_width="wrap_content"                
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:layout_alignParentRight="true"
				android:paddingRight="20dip"
				android:textSize="16sp"
				android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:text=""
                />
        </LinearLayout>
        
        
        </LinearLayout>
        </ScrollView>
                
         <LinearLayout 
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
	        <LinearLayout 
	            android:id="@+id/ll_download"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="#ffffff"
	            android:gravity="center_horizontal"
	            >
	            <Button 
	                android:id="@+id/download"
					android:layout_width="fill_parent"                
					android:layout_height="30dp"
					android:layout_marginRight="45dp"
					android:layout_marginLeft="45dp"
					android:layout_marginTop="15dp"
					android:layout_marginBottom="15dp"
					android:layout_alignParentLeft="true"
					android:text="下载"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
	                android:background="#006633"
	                android:gravity="center_horizontal|center_vertical"
	                />
	        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
