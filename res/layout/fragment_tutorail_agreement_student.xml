<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@drawable/top"
        android:gravity="center_vertical" >
                
        <include layout="@layout/commom_back_btn" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="开通"
            android:textColor="#fff"
            android:textSize="18sp" />
        
        <ImageView 
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/bar_menu_s"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"/>
    </RelativeLayout>
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_title"
        android:layout_margin="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="1、"
	                android:textSize="14sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="以手机拍照题目或手写方式提问，上传提交后，等待辅导老师的答复。由于学生人数众多及解答过程需要时间，周一至周五每日晚20时前当天提交的问题一般在3小时内回复，20时后的问题在次日上午回复。周六和周日每日晚20时前的提问在6小时内回复，20时后的提问在次日上午回复。"
	                android:textSize="14sp"/>
			</LinearLayout>
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="2、"
	                android:textSize="14sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="为防止学生让辅导老师在网上代做作业，每门课程每天提交的问题限为2题（不含同一问题再咨询一次）。"
	                android:textSize="14sp"/>
			</LinearLayout>
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="3、"
	                android:textSize="14sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="学生对辅导老师的答复不满意或发现错答的，可在“投诉栏”内投诉，或再咨询一次。有投诉的本站将作处理。"
	                android:textSize="14sp"/>
			</LinearLayout>
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="4、"
	                android:textSize="14sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="学生提交的学科问题须与其学龄段相符，与学习无关的问题辅导老师可不予答复。"
	                android:textSize="14sp"/>
			</LinearLayout>
        	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal" >

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="5、"
	                android:textSize="14sp" />
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="每门课程开通后免费使用一个月；搜题功能可长期使用。"
	                android:textSize="14sp"/>
			</LinearLayout>
			<RelativeLayout
		        android:id="@+id/register"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/height_top_bar"
		        android:gravity="center_vertical" >
		
		        <Button
		            android:id="@+id/agree"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:background="#007733"
		            android:onClick="register"
		            android:layout_marginLeft="20dp"
		            android:layout_marginRight="20dp"
		            android:layout_marginTop="7dp"
		            android:layout_marginBottom="7dp"
		            android:text="同意"
		            android:textSize="20sp"
		            android:textColor="#ffffff" />
	        
	    	</RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>